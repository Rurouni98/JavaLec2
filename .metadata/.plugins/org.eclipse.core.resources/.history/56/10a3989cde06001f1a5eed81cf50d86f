package homework;

import java.util.Random;
import java.util.Scanner;

public class _02_Advance {
	private Scanner sc = new Scanner(System.in);
	private Random rd = new Random();
	
	private boolean isExit = false;
	private int gameCnt = 0;
	private int winCnt = 0;
	private int drawCnt = 0;
	private int loseCnt = 0;
	
	// 게임을 시작하는 메소드
	public void start() {
		
		while(true) {
			System.out.println("가위바위보 시작!");
			int com = rd.nextInt(3);
			
			System.out.println("당신의 선택은? ");
			String userChoice = sc.next();
			
			int user = 0;
			int fightCnt = 0;
			
			if(userChoice.equals("가위")) {
				user = 0;
			} else if(userChoice.equals("바위")) {
				user = 1;
			} else if(userChoice.equals("보")) {
				user = 2;
			} else if(userChoice.equals("3")){
				System.out.print("");
			} else {
				System.out.println("가위, 바위, 보 중에 입력해주세요.");
			}
			
			printCom(com);
			judgeWDL(user, com);
		}

	}
	
	// 승무패 판단해주는 메소드
	public void judgeWDL(int user, int com) {
		
		switch(user) {
			case 0:
				if(com == 0) {
					System.out.println("비겼습니다.");
					drawCnt++;
				} else if(com == 1) {
					System.out.println("졌습니다.");
					loseCnt++;
				} else if(com == 2) {
					System.out.println("이겼습니다!");
					winCnt++;
				} break;
			case 1:
				if(com == 0) {
					System.out.println("이겼습니다!");
					winCnt++;
				} else if(com == 1) {
					System.out.println("비겼습니다.");
					drawCnt++;
				} else if(com == 2) {
					System.out.println("졌습니다.");
					loseCnt++;
				} break;
			case 2:
				if(com == 0) {
					System.out.println("졌습니다.");
					loseCnt++;
				} else if(com == 1) {
					System.out.println("이겼습니다!");
					winCnt++;
				} else if(com == 2) {
					System.out.println("비겼습니다.");
					drawCnt++;
				} break;
		}
	}
	
	// 컴퓨터 가위, 바위, 보 출력해주는 메소드
	public void printCom(int com) {
		if()
	}
}