package chap02_variables;

public class _02_ScopeOfVariables {
	// 1. 클래스 변수(인스턴스 변수) 선언
	// 클래스 중괄호 안에서 어디서든지 접근해서 사용하거나 값을 저장할 수 있다.
	static int num;

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// 1-1. 클래스 변수의 사용
		num = 100;
		System.out.println(num);
		
		// 2. 지역변수 선언
	}
	
	
}
