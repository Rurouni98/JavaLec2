package chap16_usefulclass;

public class _04_String03 {

	public static void main(String[] args) {
		String str1 = "bit-naver-cloud";
		String str2 = "kiaCar";
		String str3 = "aBcDeF";
		
		int num1 = 1234;
		double num2 = 1234.5678;
		boolean a = true;
		
		// split: 매개변수로 주어진 문자열로 기존 문자열을 분리해서 문자열 배열로 리턴
		// {"bit", "naver", "cloud"}
		String[] strArr = str1.split("-");
		
		for(String s : strArr) {
			System.out.println(s);
		}
		
		// 2. substring: 주어진 인덱스로 잘려진 문자열을 리턴
		// 매개변수가 하나일 때는 주어진 매개변수부터 마지막 인덱스의 문자까지 잘라진 문자열 리턴
		System.out.println(str2.substring(4));
		
		// 매개변수가 두 개일 때는 첫 번째 매개변수부터 두 번째 매개변수의 인덱스까지의 문자열을 잘라서 리턴
		// 두 번째 매개변수의 인덱스 문자는 포함하지 않는다.
	}

}
