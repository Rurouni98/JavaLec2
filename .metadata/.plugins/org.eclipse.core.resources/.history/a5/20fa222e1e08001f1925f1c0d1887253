			System.out.println("4. 종료");
			
			int menuSelect = sc.nextInt();
			boolean isExit = false;
			
			switch(menuSelect) {
				case 1:
					
					break;
				case 2:
					
					break;
				case 3:
					
					break;
				case 4:
					isExit = true;
					break;
			}
		}
		
		
		
		
		
		
		
		
	}

}
