package chap16_usefulclass;

import java.util.Scanner;

public class _10_MathEx {

	public static void main(String[] args) {
		// 사용자가 5개의 정수를 입력하고 배열에 저장
		// 배열에 저장된 정수 5개 중 최대값과 최소값을 구하세요.
		// Math.max와 Math.mix 메소드를 이용하세요.
		
		Scanner sc = new Scanner(System.in);
		
		int[] numArr = new int[5];
		
		for(int i = 0; i < 5; i++) {
			System.out.println("정수를 입력해주세요.");
			numArr[i] = sc.nextInt();
		}
		
		boolean maxCheck = false;
		boolean minCheck = false;
		int maxNum, minNum;
		
		
		for(int i = 0; i < numArr.length; i++) {
			for(int j = numArr.length - 1; j > i; j++) {
				if(Math.max(i, j) == j) {
					maxCheck = false;
					break;
				}
				
				maxCheck = true;
			}
			
			if(maxCheck)
				maxNum = i;
		}
		
		for(int i = 0; i < numArr.length; i++) {
			for(int j = numArr.length - 1; j > i; j++) {
				if(Math.min(i, j) == j) {
					minCheck = false;
					break;
				}
				
				minCheck = true;
			}
			
			if(minCheck)
				maxNum = i;
		}
		
		
		System.out.println("최대값: ");
		System.out.println("최소값: ");
		
	}

}
