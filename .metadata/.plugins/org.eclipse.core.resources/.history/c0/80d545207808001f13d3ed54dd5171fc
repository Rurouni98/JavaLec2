package homework;

public class _02_Basic {
	public static void main(String[] args) {
		
		
	}
	
	// 1번 문제
	public static int sum(int num) {
		int sum = 0;
		
		for(int i = 1; i <= num; i++) {
			sum += i;
		}
		
		return sum;
	}
	
	// 2번 문제
	public String ConcatString(String str1, String str2) {
		return str1 + str2;
	}
	
	
	// 3번 문제
	public String ConcatString(String str1, String str2, int num1) {
		return str1 + str2 + num1;
	}
	
	// 4번 문제
	public static void indexOut(int[] numArr) {
		for(int i = numArr.length - 1; i > 0; i--) {
			System.out.print(numArr[i] + " ");
		}
	}
	
}
