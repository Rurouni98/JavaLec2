package homework.homework7.middle;

public class BitRepeat {

	public static void main(String[] args) {
		StringBuffer sb = new StringBuffer(30);
		sb.append("hello");
		
		int remainBuffer = sb.capacity() - sb.length();
		
		for(int i = 0; i < remainBuffer; i++) {
			if(i % 2 == 0)
				sb.append('b');
			else if(i % 2 == 1)
				sb.append('i');
		}
	}

}
